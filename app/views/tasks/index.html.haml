%table.table.table-hover
  %thead
    %tr
      %th Title
      %th Descriptin
      %th Project
      %th Status
      %th Priority
      %th Actions
  %tbody
    - @tasks.each do |task|
      %tr
        %td= link_to task.title
        %td= task.description
        %td= link_to task.project.title, project_path(task.project)
        %td= task.task_status.label
        %td= task.priority.label
        %td= link_to 'Edit', edit_task_path(task)
